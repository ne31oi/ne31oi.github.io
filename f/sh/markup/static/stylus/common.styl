// Common styles of the project
$color1 = #f11700
html, body
    height 100%
    color #fff
    background #000
    font-family: GothamPro;
li
	list-style-type  none
.page
    // Стили для body

.page__wrapper
    min-height 100%

*
	margin 0
	padding 0
	box-sizing border-box
	outline none
* html .page__wrapper
    height 100%

button
	cursor pointer
	&:hover
		opacity .7
.container
	display flex
	max-width 1920px
	width 100%
	padding 0 110px
	position relative
	margin 0 auto
.index_header
	position relative
	z-index 10
	.container
		background-image url("../img/general/indexbg.png");
		background-position center center
		background-repeat no-repeat
		background-size cover
		flex-direction column
		.menu
			position relative
		.block_w_border,.menu
			margin-bottom 40px
		.socials,.langs
			position absolute
			top 50%
			transform translateY(-50%)
			flex-direction column
		.socials
			left 10px
		.langs
			right 10px
		.index_header_logo
			margin 160px auto
		

h2
	color $color1
	font-family: RitalinExtraBold;
	font-size: 40px;
	margin-bottom 40px
h1
	color $color1
	font-family: RitalinExtraBold;
	font-size: 90px;
	text-align center
	width 100%
	display block
h3
	font-size: 25px;
	margin-bottom 20px
	margin-top	10px
	font-family: GothamPro Bold;
.right_panel
	padding-left 30px
	img
		height 370px
		margin 30px 0
.mm	
	max-width 360px
	.mm_head 
		display flex
		justify-content space-between
		align-items center
		margin-bottom 20px
		.t	
			font-family: RitalinExtraBold;
			display flex
			font-size: 40px
			color $color1
		.imgs
			display flex
			img
				height 26px
	.mm_items
		.mm_item 
			position relative
			margin-bottom 25px
			font-size: 18px
			&.active
				a
					color $color1
				&:before
					content " "
					position absolute
					top 6px
					height 1px
					background $color1
					right calc(100% + 10px)
					width 1200px
			a	
				text-transform uppercase
				color #fff
				text-decoration none
				&:hover
					color $color1
		
	.mm_books
		display flex
		flex-wrap wrap
		justify-content space-between
		.mm_book
			width 50%
			flex-shrink 0
			display flex
			justify-content flex-start
			flex-direction column
			align-items center
			color #fff
			margin-bottom 20px
			text-decoration none
			img
				width 100%
			.mm_book_text
				text-decoration none
			&:hover
				.mm_book_text
					text-decoration underline
.header_head
	background-size cover
	background-position center center

.blog,.books,.contacts,.servises
	.header_head
		background-image url("../img/general/blogbg.png");
.contacts,.servises
	main
		padding 100px 0

	
	
.items
	flex-wrap wrap
	justify-content space-between
	margin-bottom 40px
	.item
		display flex
		flex-direction column
		width 29%
		flex-shrink 0
		cursor pointer
		margin-top 30px
		margin-bottom 10px
		&:hover
			.item_header
				color $color1
			.item_more
				border-bottom: 1px dotted $color1 !important;
		.item_img
			width 100%
			height 310px
			margin-bottom 40px
			img
				width 100%
				height 100%
				object-fit cover
		.item_header
			text-transform uppercase
			font-family: GothamPro Black;
			font-size: 25px;
			margin-bottom 24px
		.item_text
			color #f6f6f7
			font-size: 16px;
			margin-bottom 24px
		.item_subs
			display flex
			justify-content space-between
			align-items center
			.item_data
				font-size: 16px;
				color #fff
			.item_more
				font-size: 20px;
				color $color1
				text-transform uppercase
				border-bottom: 1px solid transparent
				
			
			
main
	background-image url("../img/general/kvahu-bg-BW.jpg");
	background-position top center
	background-size contain
.section
	display flex
	width 100%
	align-items center
	img
		width: 100%;
	p 
		font-size: 19px;
		margin-bottom 25px
.col10,.col20,.col30,.col40,.col50,.col60,.col70,.col80,.col90,.col100
	flex-shrink 0
.col10
	width 10%
.col20
	width 20%
.col30
	width 30%
.col40
	width 40%
.col50
	width 50%
.col60
	width 60%
.col70
	width 70%	
.col80
	width 80%
.col90
	width 90%
.col100
	width 100%	
.index_main
	background-image url("../img/general/kvahu-bg-BW.jpg");
	background-position top center
	background-size contain
	.container
		flex-direction column
		.section1
			.col70
				padding-left 100px
		.section
			.col50
				&:first-child
					padding-right 20px
				&:last-child
					padding-left 20px	
		.slick-slider {
		  margin-left: 25%;
		  margin-right: -12%;
		}

		.slick-list {
		  padding-top: 10%!important;
		  padding-bottom: 10%!important;
		  padding-left: 15%!important;
		  padding-right: 15%!important;
		}

		.slick-dots {
		  text-align: right;
		  position: absolute;
		  bottom: 0;
		  left: 0;
		  right: 0;
		  display none
		}
		.slick-arrow
			position absolute
			top 50%
			transform translateY(-50%)
			width: 30px;
			height: 29px;
			border-radius 50%;
			background $color1
			color transparent
			overflow hidden
			border none
			z-index 99
			font-family RitalinExtraBold
			font-size 27px
			&:first-child
				
				&:after
					margin-left -55px
					color #fff
					content "<"
			&:last-child
				left 300px
				&:after
					margin-left -49px
					color #fff
					content ">"
				
			
		.slick-track {
		  max-width: 100%!important;
		  transform: translate3d(0, 0, 0)!important;
		  perspective: 100px;
		}

		.slick-slide {
		  position: absolute;
		  top: 0;
		  left: 0;
		  right: 0;
		  bottom: 0;
		  margin: auto;
		  opacity: 0;
		  width: 100%!important;
		  transform: translate3d(0, 0, 0);
		  transition: transform 1s, opacity .2s;
		}

		.slick-snext,
		.slick-sprev {
		  display: block;
		}

		.slick-current {
		  opacity: 1;
		  position: relative;
		  display: block;
		  transform: translate3d(0, 0, 20px);
		  z-index: 2;
		}

		.slick-snext {
		  opacity: .5;
		  transform: translate3d(20%, 0, 0px);
		  z-index: 1;
		}

		.slick-sprev {
		  opacity: .5;
		  transform: translate3d(-20%, 0, 0px);
		}
		
		.slick-slide img
			width 200px

.langs
	font-family: RitalinExtraBold;
	display flex
	font-size: 26px;
	justify-content flex-end
	.lang 
		opacity .3
		cursor pointer
		margin-left 10px
		display flex
		justify-content center
		align-items center
		&:hover
			opacity .7
		&.active
			opacity 1
			&:hover
				opacity .7	
.menu
	font-family: RitalinExtraBold;
	display flex
	justify-content center
	a
		color #fff
		margin 10px	
		font-size: 26px;
		text-decoration none
		&:hover
			opacity .7	
.header
	position fixed
	background #000
	display flex
	justify-content space-between
	font-family: RitalinExtraBold;
	width 100%
	top 0
	left 0
	z-index 9
	min-height 90px
	.container
		align-items center
	
	
	.socials,.menu,.langs
		width 100%
.block_w_border
		border: 30px solid #40c4c8;
		padding: 20px;
		border-image-source: url("../img/general/pattern.png");
		border-image-slice: 27 51 27 50; border-image-width: 26px 49px 26px 49px;
		border-image-outset: 0px 0px 0px 0px; 
		border-image-repeat: round round;
		position relative
		margin 120px 0
		width 100%
		z-index 1
		display flex
		justify-content space-between
.form
	.container
		background-image url("../img/general/bg.png")
		background-size cover
		background-position center center		
	
		.left,.right
			flex-shrink 0
			width 50%
		.left
			display flex
			flex-direction column
			padding 0 100px
		.inputs_line
			display flex
			justify-content space-between
			margin 10px 0
		input,textarea
			width 100%
			border none
			border-bottom 1px #a7a7a7 solid
			font-family: GothamPro;
			font-size: 17px;
			padding 5px 0	
			background transparent
			color #fff
			&:focus
				border-color $color1
		textarea
			height 60px
			resize none
		input:nth-child(2)
			margin-left 10px
		.header-text
			font-family: RitalinExtraBold
			color $color1
			font-size: 40px;
			line-height: 28px;
			text-transform uppercase
			margin-bottom 60px
			margin-top 80px
		button
			width 100%
			color #fff
			height 56px
			border-radius 28px
			text-transform uppercase
			font-family: RitalinExtraBold
			background-color $color1
			display flex
			justify-content center
			align-items center
			border none
		.texts
			padding-left 40px
			padding-top 10px
			.text
				white-space nowrap
				position relative
				font-size: 16px
				margin-bottom 10px
				text-transform uppercase
				&:before
					position absolute
					left -21px
					content " "
					width 14px
					height 21px
					bottom 5px
					background-image url("../img/general/check.png")
					background-size cover
					background-position center center		
			
	.sham
		position absolute
		bottom 0
		right 150px
		height 90%
		z-index 2
.ser
	.book_slider
		display none
.footer
	display flex
	justify-content center	
	background #000
	color #fff
	font-family: GothamPro Light;
	font-size: 16px;
	font-weight: 300;
	line-height: 22px;
	padding 40px 0;
	.container		
		justify-content space-between
		align-items center
	.top
		margin-bottom 20px
	.address
		text-align left	
	.copy
		text-align right
		.politica
			color $color1;
	.address,.socials,.copy
		width 100%
.socials
		display flex
		justify-content center 
		align-items center
		.soc
			flex-shrink 0
			width 57px
			height 57px
			margin 0 15px
			img
				width 57px
				height 57px
			&:hover
				opacity .7
@media (max-width: 1440px) 
	.index_header .container .index_header_logo
		width 80%
		height: 80%;
	.form .sham
		display none
	.form .container .left
		width 100%
	.form .container .right
		width 0
@media (max-width: 1024px)
	.container
		padding: 0 30px;
	.index_header 
		.langs,.socials
			display none
	.socials .soc
		display flex
		width 40px
		height 40px
	.socials .soc img
		width 40px
		height 40px
	.menu a
		font-size: 20px;
	.section4,.section3
		flex-wrap wrap
		.col50
			width 100%
	.index_main .container .slick-slider
		margin-right 0
	.index_main .container .section .col50
		padding 0!important;
	.items .item
		width 45%
	.servises,.contacts
		.container
			flex-wrap: wrap;
	.mm
		max-width 100%
	.mm .mm_head
		justify-content center
		.t
			margin-right 10px
	.mm .mm_items .mm_item.active:before
		content none
	.mm_items
		display flex
		justify-content center
		align-items center
		flex-wrap wrap
	.mm_item
		margin 10px
		text-align center
	
@media (max-width: 768px)
	.col50,.col30,.col70
			width 100%
	.header .container,.section
		flex-wrap wrap
	.index_main .container .slick-slider
		margin-left 10%
	.form .container .left
		padding 0 10px
	.inputs_line
		flex-direction column
	.form .container input:nth-child(2)
		margin 0
		margin-top 10px
	.menu
		margin 10px 0
	.header .socials, .header .menu, .header .langs
		justify-content center
	.footer .container
		flex-direction column
	.footer .address, .footer .socials, .footer .copy
		justify-content center
		text-align center
		font-size 12px
	.form .container .texts .text
		font-size 12px
	.form .container .texts .text:before
		bottom -1px
	.form .container button
		height: 40px;
		margin-bottom 20px
	.form .container .header-text
		font-size: 24px;
		text-align center
		margin-bottom: 36px;
		margin-top: 20px;
	.footer .socials
		margin 10px
	.items .item
		width 100%
	.items .item .item_subs .item_more
		font-size 16px
	h1
		font-size: 65px;
	.right_panel
		padding-left: 0;
	.right_panel img
		width 100%
		height auto
		
	.section2
		img 
			display none
	.index_main .container .section1 .col70
		padding 0
	.index_header .container .index_header_logo
		height 100%
		width 100%
		margin 100px 0
@media (max-width: 480px)
	.menu a
		font-size: 14px;
	.index_main .container .slick-slide img
		width 120px
	.index_main .container .slick-arrow:last-child
		left 180px
	.section p
		font-size 16px
	.form .block_w_border
		border 0
		padding 0
		margin 20px 0
		
	